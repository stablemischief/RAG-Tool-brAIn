# RAG Tool Standalone - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==========================================
# OpenAI Configuration (CRITICAL - DO NOT CHANGE MODEL)
# ==========================================
OPENAI_API_KEY=sk-your-key-here
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BASE_URL=https://api.openai.com/v1

# ==========================================
# Supabase Configuration
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ==========================================
# Google Drive Service Account (NO OAuth2)
# ==========================================
GOOGLE_SERVICE_ACCOUNT_PATH=/app/config/service-account.json
GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here
POLLING_INTERVAL=300

# ==========================================
# Application Settings
# ==========================================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
CLEANUP_ENABLED=true
MAX_FILE_SIZE_MB=50

# ==========================================
# Text Processing (CRITICAL - PRESERVE EXACTLY)
# ==========================================
DEFAULT_CHUNK_SIZE=400
DEFAULT_CHUNK_OVERLAP=0

# ==========================================
# Frontend Configuration
# ==========================================
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_TELEMETRY_DISABLED=1

# ==========================================
# Production Settings (Optional)
# ==========================================
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
REDIS_PASSWORD=your-redis-password-here